        android:layout_height="86dp"
        android:text="@string/algunas_casillas_tienen_un_n_mero_este_n_mero_indica_las_minas_que_suman_todas_las_casillas_circundantes_as_si_una_casilla_tiene_el_n_mero_3_significa_que_de_las_ocho_casillas_que_hay_alrededor_si_no_es_en_una_esquina_o_borde_hay_3_con_minas_y_5_sin_minas"
